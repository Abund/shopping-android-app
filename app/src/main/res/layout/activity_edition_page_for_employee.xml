<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.abun.shoprite1.EditionPageForEmployee">

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="23dp"
    android:textSize="20dp"
    android:text="Employee Editon Page" />

<EditText
    android:id="@+id/editText10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="27dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Employee Name" />

<EditText
    android:id="@+id/editText11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editText10"
    android:layout_below="@+id/editText10"
    android:layout_marginTop="21dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Gender" />

<EditText
    android:id="@+id/editText12"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editText11"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="24dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Dob" />

<EditText
    android:id="@+id/editText13"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editText12"
    android:layout_below="@+id/editText12"
    android:layout_marginTop="26dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Designation" />

<EditText
    android:id="@+id/editText14"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/editText13"
    android:layout_below="@+id/editText13"
    android:layout_marginTop="28dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Address" />

<EditText
    android:id="@+id/editText15"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/editText14"
    android:layout_below="@+id/editText14"
    android:layout_marginTop="27dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Email" />

<EditText
    android:id="@+id/editText16"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editText15"
    android:layout_below="@+id/editText15"
    android:layout_marginTop="19dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Phone" />

    <EditText
        android:id="@+id/editText70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText16"
        android:layout_below="@+id/editText16"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText70"
        android:layout_alignEnd="@+id/editText70"
        android:text="submit"
        android:id="@+id/butiny"/>

</RelativeLayout>

